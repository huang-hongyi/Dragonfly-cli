{
    "compilerOptions": {
        "target": "ES2021",
        "module": "commonjs",
        "lib": ["es6", "es2015", "dom", "ES2021"],
        "declaration": true,
        "outDir": "dist",
        "baseUrl": ".",
        "strict": true,
        "typeRoots": ["node_modules/@types"],
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "forceConsistentCasingInFileNames": true
    },
    "exclude": ["node_modules", "dist"]
}